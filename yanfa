
___x_cmd_yanfa_setupscript(){
    local ___X_CMD_ROOT=$HOME/.x-cmd
    mkdir -p $___X_CMD_ROOT/v

    (
        cd $___X_CMD_ROOT/v

        [ ! -d "yanfa" ] || {
            echo "Already exists: $PWD/yanfa"
            return 1
        }
        
        git clone git@gitee.com:x-cmd/yanfa.git
    )

    ___X_CMD_VERSION=yanfa
    ___X_CMD_PATH_VERSION="$___X_CMD_ROOT/v/yanfa"
    . "$___X_CMD_ROOT/v/yanfa/X"
    echo "Here: $___X_CMD_VERSION"
    x boot init
}

___x_cmd_yanfa_setupscript
